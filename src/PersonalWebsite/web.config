<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModule" resourceType="Unspecified" />
    </handlers>
    <aspNetCore processPath="%LAUNCHER_PATH%" arguments="%LAUNCHER_ARGS%" forwardWindowsAuthToken="false" stdoutLogEnabled="false" />

    <rewrite>
      <rules>
        <rule name="Redirect from ru domain">
          <match url="(.*)" ignoreCase="true" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^(www.)?vladimir-kiselev\.ru$" />
          </conditions>

          <action type="Redirect" url="http://vladimir-kiselev.me/{R:1}" redirectType="Permanent" />
        </rule>
        <rule name="Remove www">
          <match url="(.*)" ignoreCase="true" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^www\.vladimir-kiselev\.me$" />
          </conditions>
          
          <action type="Redirect" url="http://vladimir-kiselev.me/{R:1}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
